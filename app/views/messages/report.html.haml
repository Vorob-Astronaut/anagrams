%h4=t("thanks_message")
=simple_form_for @message do |f|
  .form-group
    -if current_user then
      =f.input :author, label: t("author"), input_html: { value: current_user.email, class: "form-control custom-input" }
    -else
      =f.input :author, label: t("author"), input_html: { value: "Anonymous", class: "form-control custom-input" }
  .form-group
    =f.input :title, label: t("title"), input_html: { value: params[:id], class: "form-control" }
  .form-group
    =f.input :message, label: t("message"), input_html: {class: "form-control" }
  .text-right
    %input.btn.btn-success{type: "submit", value: t("send")}
