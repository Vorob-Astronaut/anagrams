/ START Top Navbar
%nav.navbar.topnavbar{:role => "navigation"}
  / START navbar header
  .navbar-header
    %a.navbar-brand{:href => "#/"}
      .brand-logo
        %img.img-responsive{:alt => "App Logo", :src => image_path('angle/logo.png')}/
      .brand-logo-collapsed
        %img.img-responsive{:alt => "App Logo", :src => image_path('angle/logo-single.png')}/
  / END navbar header
  / START Nav wrapper
  .nav-wrapper
    / START Left navbar
    %ul.nav.navbar-nav
      %li
        / Button used to collapse the left sidebar. Only visible on tablet and desktops
        %a.hidden-xs{"data-toggle-state" => "aside-collapsed", :href => "#"}
          %em.fa.fa-navicon
        / Button to show/hide the sidebar on mobile. Visible on mobile only.
        %a.visible-xs.sidebar-toggle{"data-no-persist" => "true", "data-toggle-state" => "aside-toggled", :href => "#"}
          %em.fa.fa-navicon
      / START User avatar toggle
      %li
        / Button used to collapse the left sidebar. Only visible on tablet and desktops
        %a#user-block-toggle{"data-toggle" => "collapse", :href => "#user-block"}
          %em.icon-user
      / END User avatar toggle
      / START lock screen
      %li
        %a{:href => "/pages/lock", :title => "Lock screen"}
          %em.icon-lock
      / END lock screen
    / END Left navbar
    / START Right Navbar
    %ul.nav.navbar-nav.navbar-right
      / Search icon
      %li
        %a{"data-search-open" => "", :href => "#"}
          %em.icon-magnifier
      / Fullscreen (only desktops)
      %li.visible-lg
        %a{"data-toggle-fullscreen" => "", :href => "#"}
          %em.fa.fa-expand
      / START Alert menu
      %li.dropdown.dropdown-list
        %a{"data-toggle" => "dropdown", :href => "#"}
          %em.icon-bell
          .label.label-danger 11
        / START Dropdown menu
        %ul.dropdown-menu.animated.flipInX
          %li
            / START list group
            .list-group
              / list item
              %a.list-group-item{:href => "#"}
                .media-box
                  .pull-left
                    %em.fa.fa-twitter.fa-2x.text-info
                  .media-box-body.clearfix
                    %p.m0 New followers
                    %p.m0.text-muted
                      %small 1 new follower
              / list item
              %a.list-group-item{:href => "#"}
                .media-box
                  .pull-left
                    %em.fa.fa-envelope.fa-2x.text-warning
                  .media-box-body.clearfix
                    %p.m0 New e-mails
                    %p.m0.text-muted
                      %small You have 10 new emails
              / list item
              %a.list-group-item{:href => "#"}
                .media-box
                  .pull-left
                    %em.fa.fa-tasks.fa-2x.text-success
                  .media-box-body.clearfix
                    %p.m0 Pending Tasks
                    %p.m0.text-muted
                      %small 11 pending task
              / last list item
              %a.list-group-item{:href => "#"}
                %small More notifications
                %span.label.label-danger.pull-right 14
            / END list group
        / END Dropdown menu
      / END Alert menu
      / START Contacts button
      %li
        %a{"data-no-persist" => "true", "data-toggle-state" => "offsidebar-open", :href => "#"}
          %em.icon-notebook
      / END Contacts menu
    / END Right Navbar
  / END Nav wrapper
  / START Search form
  %form.navbar-form{:action => "search.html", :role => "search"}
    .form-group.has-feedback
      %input.form-control{:placeholder => "Type and hit enter ...", :type => "text"}/
      .fa.fa-times.form-control-feedback{"data-search-dismiss" => ""}
    %button.hidden.btn.btn-default{:type => "submit"} Submit
  / END Search form
/ END Top Navbar
