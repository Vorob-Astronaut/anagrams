%main.tm-content
  .system-message-container
    - if notice.present?
      .uk-alert.uk-alert-large.uk-alert-success= notice
    - if alert.present?
      .uk-alert.uk-alert-large.uk-alert-success= alert
  %article.uk-article
    %div
      .row
        .col-md-10
          - @countries.each do |country|
            .uk-width-medium-9-10.counrty
              - if country.is_active? && country.titles.any?
                %p
                  %span.uk-h2
                    = country.country
                    - country.titles.first(4).each do |title|
                      =render 'shared/title', title: title

        .col-md-2
          =render 'layouts/partials/sidebar'
