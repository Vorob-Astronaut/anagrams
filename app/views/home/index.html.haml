.tm-block.tm-block-top-b.tm-block-padding-collapse.tm-block-fullwidth
  .uk-container.uk-container-center
    %section.tm-top-b.uk-grid{"data-uk-grid-margin" => "", "data-uk-grid-match" => "{target:'> div > .uk-panel'}"}
      .uk-width-1-1
        .uk-panel.uk-panel-box.ui-text-left.hide_tag_line
          %h2.uk-h1{:style => "text-align: center;"}
            %br>/
            Porque nos gustan las películas en español,
            = succeed "te" do
              %br/
            = succeed "\u{a1}Mira" do
              %br/
            %br/
            %br/
.tm-block.tm-block-main
  .uk-container.uk-container-center
    .tm-middle.uk-grid{"data-uk-grid-margin" => "", "data-uk-grid-match" => ""}
      .tm-main.uk-width-medium-1-1
        %main.tm-content
          .system-message-container
            - if notice.present?
              .uk-alert.uk-alert-large.uk-alert-success= notice
            - if alert.present?
              .uk-alert.uk-alert-large.uk-alert-success= alert
          %article.uk-article
            %div
              %p
              .fabrikDataContainer.homefilmstrip
                #list_34_com_content_34
                  .fabrik_groupdata
                    .uk-grid
                      .uk-width-1-1.uk-h2.main-heading
                        = @films.first[0]
                        by
                        %span.auth= User.find(@films.first[1]).email
                      - i=0
                      - @films.each do |film|
                        - if (film[6].present?) && (film[6].include? '1')
                          - i = i+1
                          .uk-width-1-2.uk-width-medium-1-4.uk-width-large-1-5.uk-width-small-1-3.box_34
                            .strip-container
                              %a{:href => "/titles/#{film[4]}"}
                                %img.fabrikLightBoxImage{:alt => "", :src => "#{Title.find(film[4]).keyArt.url(:medium)}"}/
                              .strip-conainer-hover{:style => "text-align:justify"}
                                %h1= truncate(film[2],:length => 20)
                                %i= film[3]
                                %h3
                                %div
                                  %span= truncate(film[2],:length => 20)
                                  %br/
                                  %br/
                                  %span
                                    %small
                                    %small= film[3]
                                  %br/
                                  %br/
                                  = truncate(film[5],:length => 160)
                                  %br/
                                  %br/
                                / **********Add To Favourite ***********
                                %a#add_34.round-icon.add_favourite{"data-uk-tooltip" => "{pos:'top-right'}"}
                                  %img{:src => "/assets/heart.png"}/
                                / Remove From View **********************
                                %a#film_34.round-icon.Remove_view{"data-uk-tooltip" => "{pos:'top-right'}"}
                                  %img{:src => "/assets/cross.png"}/
                                / ***************Add To Queue   ****************
                                %a#addqueue_34.round-icon.myqueue{"data-uk-tooltip" => "{pos:'top-right'}", :title => "Want To Watch"}
                                  %img{:src => "/assets/edit.png"}/
              .fabrikDataContainer.filmstrip.homefilmstrip
                #list_34_com_content_34
                  .fabrik_groupdata
                    %h4.main-heading Collections
                    .uk-grid.by-butaca
                      - Collection.all.each do |coll|
                        - if coll.image.present?
                          .uk-width-medium-1-2.uk-width-small-1-2
                            %p.uk-text-left.mtop
                              - if coll.image.present?
                                %a{:href => "/collections/#{coll.id}"}
                                  %img.fabrikLightBoxImage{:alt => "#{coll.image.name}", :src => "#{coll.image.url(:custom)}"}/
                            %h3.uk-text-left.bottom-heading
                              %a{:href => "/"}
                                = coll.collection_name
                                %small
                                  by #{User.find(coll.user_id).email}
                              %a#collection_11.addCollection.follow_btn{:onclick => ""} Sígueme
                  .filmstrip_footer
                    .fabrik___heading
                      %span
                        .fabrikNav
              %p
              %br/
              %br/
              %br/
              %br/
