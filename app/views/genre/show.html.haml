.row
  .col-md-2
    =render 'layouts/partials/sidebar'
  %ol.breadcrumb
    = render_breadcrumbs tag: :li, separator: ""
  .col-md-10.back-ground
    %p
      %span.uk-h2
        = @genre.genre_espanol
    .row
      .col-md-12
        - @genre.titles.in_groups_of(4, false).each do |group|
          -group.each do |title|
            .col-lg-2.col-md-3.col-sm-6.padding-5{id: "title-#{title.id}"}
              =render 'shared/title', title: title