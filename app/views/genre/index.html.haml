.row
  .col-md-2
    =render 'layouts/partials/sidebar'
  %ol.breadcrumb
    = render_breadcrumbs tag: :li, separator: ""
  .col-md-10.back-ground
    - @genres.each do |genre|
      %p
        %span.uk-h2
          = genre.genre_espanol
      .row
        .col-md-12
          - genre.titles.first(4).each do |title|
            .col-lg-2.col-md-3.padding-5{id: "title-#{title.id}"}
              =render 'shared/title', title: title


